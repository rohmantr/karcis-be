{
  "name": "karcis-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "mikro-orm": "mikro-orm",
    "migrate": "npx dotenv-cli -e .env -- npx mikro-orm migration:up",
    "migrate:create": "npx dotenv-cli -e .env -- npx mikro-orm migration:create",
    "migrate:down": "npx dotenv-cli -e .env -- npx mikro-orm migration:down",
    "migrate:fresh": "npx dotenv-cli -e .env -- npx mikro-orm migration:fresh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npx dotenv-cli -e .env.test -- jest --config ./test/jest-e2e.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.2",
    "@fastify/static": "^9.0.0",
    "@mikro-orm/core": "^6.6.7",
    "@mikro-orm/migrations": "^6.6.7",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.6.7",
    "@mikro-orm/reflection": "^6.6.7",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.14",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/throttler": "^6.5.0",
    "@sentry/nestjs": "^10.40.0",
    "@sentry/profiling-node": "^10.40.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.70.1",
    "ioredis": "^5.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@mikro-orm/cli": "^6.6.7",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "cookie-signature": "^1.2.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!main.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/*.entity.(t|j)s",
      "!**/*.dto.(t|j)s",
      "!**/*.repository.(t|j)s",
      "!**/*.guard.(t|j)s",
      "!**/*.filter.(t|j)s",
      "!**/*.interceptor.(t|j)s",
      "!**/*.processor.(t|j)s",
      "!migrations/**",
      "!config/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 90
      }
    }
  }
}